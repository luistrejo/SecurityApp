<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView"
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:src="@drawable/logouchiha" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="7dp"
        android:padding="20dp"
        android:layout_weight="3.3"
        android:orientation="vertical">


        <EditText
            android:layout_marginHorizontal="10dp"
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".65"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:background="@drawable/text_redondo"
            android:drawableLeft="@drawable/ic_action_user"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:hint="Numero de Celular"
            android:imeOptions="actionSearch"
            android:inputType="phone"
            android:maxLength="15"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16dp" />

        <EditText
            android:layout_marginHorizontal="10dp"
            android:id="@+id/txt_passLog"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_weight=".65"
            android:layout_gravity="center"
            android:layout_marginBottom="19dp"
            android:background="@drawable/text_redondo"
            android:drawableLeft="@drawable/ic_action_user"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="16dp" />


        <Button

            android:id="@+id/btnIngresar"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="0dp"
            android:layout_weight=".65"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/boton_redondo"
            android:gravity="center"
            android:onClick="onclickIngresar"
            android:text="INICIAR SESIÓN"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/losspass"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="onClick"
            android:text="@string/olvid_mi_contrase_a"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:text="¿Aun no tienes una cuenta?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="19sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/mReg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:onClick="onClick"
            android:text="REGISTRATE AQUI."
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/white" />


    </LinearLayout>



</LinearLayout>

